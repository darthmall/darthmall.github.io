{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "serve",
            "type": "shell",
            "osx": {
                "command": "bundle",
                "args": [
                "exec",
                "jekyll",
                "serve"
                ],
            },
            "windows": {
                "command": "wsl",
                "args": [
                    "GEM_HOME=~/gems",
                    "~/gems/bin/bundle",
                    "exec",
                    "jekyll",
                    "serve"
                ]
            },
            "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "dedicated"
            }
        }
    ]
}
